{
  "rules": {
    "connections": {
      "$connection": {
        ".read": true,
        "connected": {
          ".read": true,
          ".write": false
        },
        "ipAddress": {
          ".read": false,
          ".write": false
        },
        "player": {
          ".read": true,
          ".write": false
        },
        "server": {
          ".read": true,
          ".write": false
        }
      }
    },

    "players": {
      ".read": true,
      "$player": {
        ".write": false
      }
    },

    "products": {
      ".read": true,
      ".write": false
    },

    "servers": {
      ".read": true,
      "$server": {
        ".write": false
      }
    },

    "users": {
      ".read": true,
      "$userId": {
        ".write": "$userId === auth.uid"
      },
      ".indexOn": ["email", "associationToken"]
    }
  }
}
