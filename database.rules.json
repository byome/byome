{
  "rules": {
    "authentication-roles": {
      ".read": true,
      ".write": false,
      ".validate": "newData.isString() && newData.val() == 'admin'"
    },

    "connections": {
      ".read": true,
      "$connection": {
        ".read": true,
        "connected": {
          ".read": true,
          ".write": false
        },
        "ipAddress": {
          ".read": false,
          ".write": false
        },
        "player": {
          ".read": true,
          ".write": false
        },
        "server": {
          ".read": true,
          ".write": false
        }
      },
      ".indexOn": ["connected", "sleeping"]
    },

    "deaths": {
      ".read": true,
      ".write": false,
      ".indexOn": ["player", "timestamp"]
    },

    "kills": {
      ".read": true,
      ".write": false,
      ".indexOn": ["player", "timestamp"]
    },

    "messages": {
      ".read": true,
      ".write": false,
      ".indexOn": ["player", "server"]
    },

    "players": {
      ".read": true,
      "$player": {
        ".write": false
      }
    },

    "products": {
      ".read": true,
      ".write": false,
      ".indexOn": ["slug"]
    },

    "purchases": {
      ".write": "newData.child('user').val() === auth.uid",
      "$purchaseId": {
        ".read": "data.child('user').val() === auth.uid",
        ".write": "!data.exists() && newData.exists() && newData.child('user').val() === auth.uid",
        "amount": {
          ".write": false
        },
        "redemptionsLeft": {
          ".write": false,
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "stripeId": {
          ".write": false
        },
        "status": {
          ".write": "!data.exists() && newData.exists()"
        },
        "notes": {
          ".write": false
        },
        "product": {
          ".write": "!data.exists() && newData.exists()"
        },
        "user": {
          ".write": "!data.exists() && newData.exists()"
        },
        "redemptions": {
          ".write": false
        }
      },
      ".indexOn": ["product", "user", "code"]
    },

    "redemptions": {
      "$redemptionId": {
        ".read": "root.child('purchases').child(data.child('purchase').val()).child('user').val() === auth.uid",
        ".write": false
      }
    },

    "servers": {
      ".read": true,
      "$server": {
        ".write": "root.child('authentication-roles').child(auth.uid).exists()"
      }
    },

    "stripe_customers": {
      ".read": false,
      ".write": false
    },

    "users": {
      ".read": true,
      "$userId": {
        ".write": "$userId === auth.uid",
        "email": {
          ".write": "!data.exists() && newData.exists()"
        },
        "changeEmail": {
          ".write": "$userId === auth.uid && !data.exists() && newData.exists()"
        },
        "name": {
          ".write": "$userId === auth.uid"
        },
        "username": {
          ".write": "$userId === auth.uid"
        },
        "referralToken": {
          ".write": "!data.exists() && newData.exists()"
        },
        "associationToken": {
          ".write": "$userId === auth.uid"
        },
        "stripeCardToken": {
          ".write": "$userId === auth.uid"
        },
        "player": {
          ".write": false
        },
        "purchases": {
          "$purchaseId": {
            ".write": "$userId === auth.uid && !data.exists() && newData.exists()"
          }
        }
      },
      ".indexOn": [
        "email",
        "username",
        "associationToken",
        "sleeping"
      ]
    }
  }
}
