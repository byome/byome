<div class="row">
  <div class="col-md-4">

    <!-- Server Info -->
    <div class="row">
      <div class="col-md-12">
        <div class="user-info-list panel panel-default">
          <div class="panel-heading panel-heading-divider">{{server.name}}</div>
          <div class="panel-body">
            <table class="no-border no-strip skills">
              <tbody class="no-border-x no-border-y">
                <tr>
                  <td class="icon"><span class="icon s7-graph1"></span></td>
                  <td class="item">Host</td>
                  <td>{{server.host}}</td>
                </tr>
                <tr>
                  <td class="icon"><span class="icon s7-global"></span></td>
                  <td class="item">Location</td>
                  <td>{{server.location}}</td>
                </tr>
                <tr>
                  <td class="icon"><span class="icon s7-rocket"></span></td>
                  <td class="item">Status</td>
                  <td>
                    {{#if server.isOnline}}
                      <span class="item badge badge-success">Online</span>
                    {{else if server.isRestarting}}
                      <span class="item badge badge-info">Restarting</span>
                    {{else if server.isUpgrading}}
                      <span class="item badge badge-warning">Upgrading</span>
                    {{else}}
                      <span class="item badge badge-danger">Offline</span>
                    {{/if}}
                  </td>
                </tr>
                <tr>
                  <td class="icon"><span class="icon s7-hourglass"></span></td>
                  <td class="item">
                    Last Wipe <br/>
                    {{#if (can "edit server" server)}}
                      <span class="small"><a href="javascript:;" {{action 'updateWipeDay'}}>Set to Today</a></span>
                    {{/if}}
                  </td>
                  <td>{{moment-format server.lastWipe 'MM/DD/YYYY'}}</td>
                </tr>
                <tr>
                  <td class="icon"><span class="icon s7-hourglass"></span></td>
                  <td class="item">Next Wipe</td>
                  <td>{{moment-format server.nextWipe 'MM/DD/YYYY'}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- / Server Info -->

    <!-- Server Map -->
    <div class="row">
      <div class="col-md-12">
        <img src="http://{{server.slug}}.byome.io:28015/map.jpg" class="img-fluid" alt="Map of {{server.name}}" />
      </div>
    </div>
    <!-- / Server Map -->

  </div>

  <div class="col-md-8">

    <!-- Active Players -->
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Players Online
          </div>
          <div class="panel-body">
            <div class="progress progress-striped active">
              <div style="width: {{server.playersOnlineWidth}}%" class="progress-bar progress-bar-success"></div>
            </div>
            <small>{{server.playersOnlineCount}} / {{server.playerLimit}} players online</small>
          </div>
        </div>
      </div>
    </div>
    <!-- / Active Players -->

    <!-- Kill Feed -->
    {{kill-feed kills=kills}}
    <!-- / Kill Feed -->

  </div>
</div>
