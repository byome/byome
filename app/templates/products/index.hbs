      <div class="price-actions">
        <h3>Uses: {{forafewdollarsmore.redemptions}}</h3>
        <p>Kit can only be used <strong>once</strong> per wipe.</p>
        {{#if session.userModel.stripeCardToken}}
          <button class='btn btn-lg' {{action 'setSelectedKit' forafewdollarsmore}} data-toggle="modal" href="#purchaseModal">Get Now</button>
        {{else}}
          <h5 class="text-danger">You must have a payment method on file in order to buy a kit.</h5>
          {{#link-to 'settings.billing' class="btn btn-lg"}}Add Payment Method{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-sm-3">
    <div class="pricing-table">
      <div class="pricing-head">
        <h1>{{goodbadugly.name}}</h1>
        <h2><span class="note">$</span>{{goodbadugly.price}}</h2>
      </div>
      <ul class="list-unstyled">
