        {{#if session.userModel.stripeCardToken}}
          <button class='btn btn-lg' {{action 'setSelectedKit' fistfulofdollars}} data-toggle="modal" href="#purchaseModal">Get Now</button>
        {{else}}
          <h5 class="text-danger">You must have a payment method on file in order to buy a kit.</h5>
          {{#link-to 'settings.billing' class="btn btn-lg"}}Add Payment Method{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-sm-3">
    <div class="pricing-table most-popular">
      <div class="pricing-head">
        <h1>{{forafewdollarsmore.name}}</h1>
        <h2><span class="note">$</span>{{forafewdollarsmore.price}}</h2>
      </div>
      <ul class="list-unstyled">
        {{#each-in forafewdollarsmore.description as |item amount|}}
